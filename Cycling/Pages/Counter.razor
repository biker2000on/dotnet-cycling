@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<MudButton OnClick="IncrementCount" Color="Color.Secondary">+</MudButton>
<MudButton OnClick="DecrementCount" Color="Color.Primary" >-</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    private void DecrementCount()
    {
        currentCount--;
    }
}

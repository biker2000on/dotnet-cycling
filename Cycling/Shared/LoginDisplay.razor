<AuthorizeView>
    <Authorized>
        <MudLink Href="Identity/Account/Manage" Color="Color.Inherit" Class="mx-3">Hello, @context.User.Identity?.Name!</MudLink>
        <form method="post" action="Identity/Account/Logout">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit">Log Out</MudButton>
            </form>
</Authorized>
    <NotAuthorized>
        <MudLink Href="Identity/Account/Register" Color="Color.Inherit" Class="mx-1">Register</MudLink>
        <MudLink Href="Identity/Account/Login" Color="Color.Inherit">Login</MudLink>
    </NotAuthorized>
</AuthorizeView>


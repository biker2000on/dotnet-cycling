<AuthorizeView>
    <Authorized>
        <RadzenLink class="rz-m-2" Path="Identity/Account/Manage">
            Hello, @context.User.Identity?.Name!
        </RadzenLink>
        <RadzenTemplateForm TItem="User" Method="post" Action="Identity/Account/Logout" Data="@user" Context="buttonContext">
            <RadzenButton ButtonType="ButtonType.Submit" Text="Log out" class="rz-mr-2" />
        </RadzenTemplateForm>
    </Authorized>
    <NotAuthorized>
        <RadzenLink Path="Identity/Account/Register" Text="Register" />
        <RadzenLink Path="Identity/Account/Login" Text="Log in" class="rz-mr-2" />
    </NotAuthorized>
</AuthorizeView>

@code{
    class User{}

    User user = new User();
}
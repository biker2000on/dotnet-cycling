<AuthorizeView>
    <Authorized>
        <BarItem>
            <BarLink To="Identity /Account/Manage">Hello, @context.User.Identity?.Name!</BarLink>
        </BarItem>
        <BarItem>
        <form method="post" action="Identity/Account/Logout">
            <Button>Log out</Button>
        </form>
        </BarItem>
    </Authorized>
    <NotAuthorized>
        <BarItem>
            <BarLink To="Identity/Account/Register">Register</BarLink>
        </BarItem>
        <BarItem>
            <BarLink To="Identity/Account/Login">Log in</BarLink>
        </BarItem>
    </NotAuthorized>
</AuthorizeView>
